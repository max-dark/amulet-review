        $loc = getCurrentLocId();
        $login = getCurrentUserId();

        if (manageItems($loc, $speak, "", "i.q.vorovoj", "count") > 0) {
            manageItems($loc, $speak, $login, "i.q.vorovoj", 1);
            $title = "[смотрит на ваше крепкое телосложение] Ладно, забирай, так уж и быть. Мне только не хватало потасовок с таким амбалом, как ты. И это... лучше иди отсюда, а?";
        } else {
            $title = "Но у меня его правда нет!";
        }
    } else {
        $title = "Ого, какие мы крутые! Я весь дрожу от страха, ха-ха. Проваливай, пока цел.";
    }
}

