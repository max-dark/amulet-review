function nCapT2_getTimer($speak)
{
    global $loc_i;

    return $loc_i[getCurrentLocId()][$speak]["qv"];
}

function nCapT2_resetTimer($speak)
{
    global $loc_i;

    $loc_i[getCurrentLocId()][$speak]["qv"] = time();
}

function nCapT2_begin(&$title, $speak)
{
    $time = time() - nCapT2_getTimer($speak);
    if ($time < 300) {
        $title = "Эй, корабль только что вернулся с рейса, ты опоздал! Подходи через " .
            (round(5 - ($time) / 60) + 1) . " минут";
    } else {
        $title = "Что, <name>, соскучился по большой земле? Тогда вперед, разрази меня гром!";
    }
}

function nCapT2_begin_go(&$title, &$id, $speak)
{
    if (time() - nCapT2_getTimer($speak) < 300) {
        $title = "Ладно, я подойду через несколько минут";
        $id = "end";
    } else {
        $title = "Отлично, отправляемся немедленно!";
    }
}

function nCapT2_go(&$title, $speak)
{
    global $loc_i; // TODO: remove it

    if (time() - nCapT2_getTimer($speak) < 300) {
        $title = "Мы не можем сейчас плыть, надо запастись пресной водой и дождаться отлива.";
    } else {
        nCapT2_resetTimer($speak);
        addjournal(getCurrentLocId(), "all", "Эй, лоботрясы, отдать швартовы! И... Эх, понеслась, родимая!");
        $title = "Приехали, все на берег!";
        foreach ($loc_i["x287x1252"] as $i => $val) {
            if ($i != $speak) {
                manageNPC($i, "x287x1252", "x1103x618");
                if (substr($i, 0, 2) == "u.") {
                    $f = fopen("online/" . $i, "w");
                    fputs($f, "x1103x618\n" . time());
                    fclose($f);
                }
            }
        }
    };
}

