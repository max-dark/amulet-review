<?php

function nLakosta_begin(&$title)
{
    $tu = explode("|", getCurrentUser("user"));
    $tc = $tu[2] == "m" ? "сын мой" : "дочь моя";
    $title = "Здравствуй, " . $tc . ", чем я могу тебе помочь?";
}

function nLakosta_begin_qv(&$title)
{
    $loc = getCurrentLocId();
    $login = getCurrentUserId();

    if (manageItems($loc, $login, "", "i.q.jofe", "count") > 0) {
        $title = "Я помог убежать Йофе из темницы в подземелье и он дал мне этот браслет";
    } else {
        $title = "";
    }
}

function nLakosta_qv(&$title)
{
    $loc = getCurrentLocId();
    $login = getCurrentUserId();

    if (manageItems($loc, $login, "", "i.q.jofe", "count") > 0) {
        addexp($loc, $login, 100);
        manageItems($loc, $login, "", "i.q.jofe", 1);
        manageItems($loc, "", $login, "i.f.b.health.great", 2);
        $title = "Благодарю тебя, сын мой. Церковь не забывает благих поступков. К сожалению, казна разграблена демонами, поэтому возьми хотя бы эти целебные элексиры, они укрепляют тело и дух.";
    } else {
        $title = "У тебя нет браслета Йофе, зачем ты обманываешь меня?";
    }
}

return [
